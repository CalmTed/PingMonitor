{
  "name": "pingmonitor",
  "version": "1.3.6",
  "description": "ping monitoring",
  "main": "index.js",
  "icon": "assets/icons/PM_nofill.ico",
  "scripts": {
    "start": "electron index.js",
    "tcompile":"tsc --project tsconfig.json",
    "tstart":"npm run tcompile && electron host.js",
    "pack": "electron-packager ./ PingMonitor",
    "build": "electron-builder --dir",
    "build_portable": "electron-builder --win portable"
  },
  "build": {
    "appId": "ping.monitor",
    "productName": "Ping Monitor",
    "buildVersion": "1.3.6",
    "target": "portable",
    "icon": "assets/icons/PM.ico",
    "compression": "maximum",
    "asar": true,
    "extraFiles": [
      "assets/config/config.json",
      "assets/config/ua.lang",
      "assets/config/en.lang",
      "assets/alarm.wav",
      "assets/icons/*"
    ],
    "win": {
      "legalTrademarks": "Â© Made by Ted Frost for UMF in 2021. For no commercial use only."
    }
  },
  "author": "calmted",
  "license": "ISC",
  "dependencies": {
    "electron-packager": "^15.2.0",
    "jquery": "^3.6.0",
    "local-storage": "^2.0.0",
    "material-icons": "^1.10.3",
    "ping": "^0.4.1",
    "sortablejs": "^1.14.0"
  },
  "devDependencies": {
    "electron": "^13.6.9"
  }
}
