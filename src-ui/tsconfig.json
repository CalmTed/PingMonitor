{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",

		"moduleResolution": "node",
		"esModuleInterop": true,		

		"jsx": "react",

		"allowJs": false,
		"checkJs": false,
		"strict": true,

		"declaration": true,
		"sourceMap": true, 

		"useDefineForClassFields": true,

		"experimentalDecorators": true,

		"forceConsistentCasingInFileNames": true,

		"outDir": ".out/",
		"baseUrl": ".",

		"skipLibCheck": true
	},

	"include": [
		"./src/*.ts",
		"./src/*.tsx",
		"./src/**/*.ts",
		"./src/**/*.tsx"
	],

	"exclude": [
		"node_modules"
	]
}